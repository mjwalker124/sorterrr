#new-student-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title New Student
      = simple_form_for(@student, :remote => true) do |f|
        .modal-body
          = f.error_notification
          = f.input :first_name
          = f.input :last_name
          = f.input :registration_number
          = f.input :email
          = f.input :ability, :input_html => { :type => "text" }
          = f.input :overseas
          = f.association :course_year
          = f.association :course

        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          = f.button :submit, class: 'btn-primary add-student'