- content_for :title, "Admin - Students"
= render layout: 'admin/admin_layout' do
  %table.table.table-striped.table-bordered.fancytable
    %thead
      %tr
        %th First name
        %th Last name
        %th Registration number
        %th Email
        %th Ability
        %th Overseas
        %th Course year
        %th Course
        %th
        %th

    %tbody
      - @students.each do |student|
        %tr{'data-student-id' => student.id}
          %td= student.first_name
          %td= student.last_name
          %td= student.registration_number
          %td= student.email
          %td= student.ability
          %td= student.overseas
          %td= student.course_year.name
          %td= student.course.name
          %td
            %a{:href => "#", :class => 'edit-student'} Edit
          %td
            %a{:href => "#", :class => 'delete-student'} Delete

  %br

  .btn.btn-default{'aria-label': 'New Student', type: 'button', 'data-toggle'=> 'modal', 'data-target': '#new-student-modal'} New Student


-# Modal Boxes

= render 'new_student_modal'
= render 'edit_student_modal'