#edit-course-year-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Edit Course Year
      = simple_form_for(@course_year, :remote => true, :authenticity_token => true, html: { class: "edit-course-year-form", id: "edit-course-year"}, url: {action: :update}, :method => :patch) do |f|
