#edit-user-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Edit Year Leader
      = simple_form_for(@user, :remote => true, :authenticity_token => true, html: { class: "edit-user-form", id: "edit-user"}, url: {action: :update}, :method => :patch) do |f|
        .modal-body
          = f.error_notification
          = f.input :email
          = f.association :course_year
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary{:type => :submit, :class => "save-user"} Save