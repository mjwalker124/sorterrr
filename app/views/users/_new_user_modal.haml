#new-user-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title New Year Leader
      = simple_form_for(@user, :remote => true) do |f|
        .modal-body
          = f.error_notification
          = f.input :email
          = f.association :course_year
          = f.input :password, input_html: { class: 'no-table' }, required: true
          = f.input :password_confirmation, input_html: { class: 'no-table' }, required: true
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          = f.button :submit, class: 'btn-primary add-user'