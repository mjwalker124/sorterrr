.col-lg-4.col-md-6{'data-project-name': p.name}
  .project
    .panel.panel-default
      .panel-heading
        %h3.dashboard
          #{p.name}
        = link_to  p, :method => :delete, :id => p.id, :data => { :confirm => 'Are you sure?'}, class: 'btn btn-default delete-project-button' do
          %span.fa.fa-trash{'aria-hidden': 'true'}
      .panel-body
        %p
          Year Group: #{p.course_year.name}
        %p
          Number of Reviews: #{p.reviews.size}
        %p
          Last modified: #{p.updated_at.strftime('%d/%m/%y %H:%M %Z')}

      .panel-footer
        = link_to  project_path(p), class: 'btn btn-default' do
          Group Allocation
          %span.fa.fa-chevron-right{'aria-hidden': 'true'}
        = link_to  project_review_path(p), class: 'btn btn-default' do
          Review Allocation
          %span.fa.fa-chevron-right{'aria-hidden': 'true'}
